pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
                writeFile file: 'test_file_from_pipeline.txt', text: 'Content inside the file from git pipeline'
                sleep 10
            }
        }
        stage('Test') {
            echo 'Running tests..'
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
                sleep 2
            }
        }
    }
}
